<%- include('../partials/login-header') %>

<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="index.html"> <h4>Reset Password</h4></a>
                            <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
                                <p class = "alert alert-danger ml15 mr15 text-center"><%- errors.msg %></p>
                                <% } %>
    
                            <form class="mt-5 mb-5 login-input" action="/user/newPassword/<%= token %>" method="post">
                               
                                <div class="form-group">
                                    <label class="col-lg-12 col-form-label" for="val-phoneus">New Password 
                                    <input type="password" name="password" class="form-control" placeholder="Password" value="">
                                    <% if(typeof errors !== 'undefined' && typeof errors.password !== 'undefined') { %>
                                        <p class = "error"><%- errors[ "password" ] %></p>
                                        <% } %>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-12 col-form-label" for="val-phoneus">Confirm Password 
                                    <input type="password" name="confirm_password" class="form-control" placeholder="Password" value="">
                                    <% if(typeof errors !== 'undefined' && typeof errors.confirm_password !== 'undefined') { %>
                                        <p class = "error"><%- errors[ "confirm_password" ] %></p>
                                        <% } %>
                                </div>
                               
                                <input type="submit" class="btn login-form__btn submit w-100" value="Sign In"/>
                            </form>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/login-footer') %>
