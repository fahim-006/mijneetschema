<%- include('./partials/header') %>
<%- include('./partials/sidebar') %>
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Lead</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Details</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Lead Details</h4>
                        <div class="card-title"> 
                            <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
                                <p class = "alert alert-success ml15 mr15 text-center"><%- errors.msg %></p>
                             <% } %>  
                             <% if(typeof added !== 'undefined') { %>
                                 <p class = "alert alert-success ml15 mr15 text-center"><%- added %></p>
                              <% } %>  
                             <% if(typeof message !== 'undefined' && typeof message.msg !== 'undefined') { %>
                                 <p class = "alert alert-success ml15 mr15 text-center"><%- message.msg %></p>
                              <% } %>     
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Sr no.</th>
                                        <th>Email</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Age</th>
                                        <th>Fat</th>
                                        <th>Length</th>
                                        <th>Weight</th>
                                        <th>Targeted Weight</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(data.length > 0) {%>
                                        <% data.map((item,i) => { %>
                                    <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.gender %></td>
                                    <td><%= item.age %></td>
                                    <td><%= item.fat_percent %></td>
                                    <td><%= item.length %></td>
                                    <td><%= item.current_weight %></td>
                                    <td><%= item.target_weight %></td>
                                    </tr>
                                    <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# column -->          
        </div>
 
    <!-- #/ container -->
</div>
<%- include('./partials/footer') %>