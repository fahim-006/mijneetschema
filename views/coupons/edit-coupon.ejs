<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>

<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Coupon</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card"> 
                    <div class="card-body">
                        <h4>Edit Coupons</h4>
                        <div class="form-validation">
                            <% if(typeof success !== 'undefined' && typeof success.msg !== 'undefined') { %>
                                <p class = "alert alert-success ml15 mr15 text-center"><%- success.msg %></p>
                             <% } %>  
                             <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
                                <p class = "alert alert-danger ml15 mr15 text-center"><%- errors.msg %></p>
                             <% } %>    
                            <form class="form-valide" action="/products/coupons/update/<%= formdata['id'] %>" method="post" >
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Coupon <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="coupon" value="<%=formdata['coupon'] %>" placeholder="Enter a coupon name..">
                                        <% if(typeof errors !== 'undefined' && typeof errors.coupon !== 'undefined') { %>
                                            <p class = "error"><%- errors["coupon"] %></p>
                                        <% } %> 
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Discount <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="number" class="form-control" id="val-username" name="discount" value="<%=formdata['discount'] %>" placeholder="Enter a discount..">
                                        <% if(typeof errors !== 'undefined' && typeof errors.discount !== 'undefined') { %>
                                            <p class = "error"><%- errors["discount"] %></p>
                                        <% } %> 
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Expiry Date <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" class="form-control" id="val-username" name="expiry_date" value="<%=formdata['expiry_date'] %>" placeholder="Enter a expiry date..">
                                        <% if(typeof errors !== 'undefined' && typeof errors.expiry_date !== 'undefined') { %>
                                            <p class = "error"><%- errors["expiry_date"] %></p>
                                        <% } %> 
                                    </div>
                                </div>
                              
                             
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>   
<%- include('../partials/footer') %>